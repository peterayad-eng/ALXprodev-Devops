#!/bin/bash
# Summarizes PokÃ©mon data into a CSV and calculates averages

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Check if directory exists
if [ ! -d "$INPUT_DIR" ]; then
    echo "Directory '$INPUT_DIR' not found. Run batchProcessing-0x02 first."
    exit 1
fi

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Extract name, height, weight from JSON files
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/\b\(.\)/\u\1/') # Capitalize first letter
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert to meters and kilograms (API returns decimeters and hectograms)
    height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")

    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"
echo

# Display CSV contents
cat "$OUTPUT_FILE"
echo

# Calculate averages using awk (skip header)
awk -F',' 'NR>1 {total_height+=$2; total_weight+=$3; count++}
END {
    printf "\nAverage Height: %.2f m\n", total_height/count
    printf "Average Weight: %.2f kg\n", total_weight/count
}' "$OUTPUiT_FILE"

